{
    "name": "mcp-logic",
    "version": "1.0.0",
    "description": "MCP server for first-order logic reasoning with Tau-Prolog",
    "type": "module",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/index.js",
        "dev": "tsx src/index.ts",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
